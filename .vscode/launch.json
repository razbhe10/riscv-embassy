{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Red-V launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/riscv32imc-unknown-none-elf/debug/examples/uart_embassy_multi_tasks",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "hardwareBreakpoints": {
                "enabled": true,
                "nonStop": false
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "set remotetimeout 20"
                },
                {
                    "text": "file ${workspaceFolder}/target/riscv32imc-unknown-none-elf/debug/examples/uart_embassy_multi_tasks"
                },
            ],
            "postRemoteConnectCommands": [
                {
                    "description": "Reset target",
                    "text": "monitor reset"
                },
                {
                    "description": "Reset target",
                    "text": "load"
                },
            ],
            "serverLaunchTimeout": 20000,
            "miDebuggerPath": "riscv64-unknown-elf-gdb",
            "miDebuggerServerAddress": ":3333",
        },
        {
            "name": "QEMU-RISCV launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/riscv32imc-unknown-none-elf/debug/examples/uart_embassy_multi_tasks",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "riscv64-unknown-elf-gdb",
            "miDebuggerServerAddress": "localhost:1234",
            "preLaunchTask": "Run_QEMU",
        },
    ]
