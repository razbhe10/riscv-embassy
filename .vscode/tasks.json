{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run_QEMU_Server",
            "type": "shell",
            "command": "echo Starting QEMU Server; qemu-system-riscv32 -nographic -machine sifive_e,revb=true -bios none -net none -pidfile qemu.pid -chardev stdio,id=con,mux=on -serial chardev:con -mon chardev=con,mode=readline -S -gdb tcp::1234 -kernel  ${workspaceFolder}/target/riscv32imc-unknown-none-elf/debug/examples/uart_embassy_multi_tasks",
            // "command": "echo Starting QEMU Server; qemu-system-riscv32 -nographic -M virt -smp 4 -m 2G -S -gdb tcp::1234 -bios /usr/share/qemu/opensbi-riscv64-generic-fw_dynamic.bin -device loader,file=/home/razbe/riscv-embassy/target/riscv32imc-unknown-none-elf/debug/examples/uart_embassy_multi_tasks,addr=0x20000000",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "riscv64-unknown-elf-gdb",
            "args": [
                "-q",
                "-x",
                "${workspaceFolder}/gdb_init",
                "${workspaceFolder}/target/riscv32imc-unknown-none-elf/debug/examples/uart_embassy_multi_tasks"
            ],
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cargo build --example uart_embassy_multi_tasks",
        },
        {
            "label": "Run_QEMU",
            "dependsOn": [
                "Build",
                "Run_QEMU_Server"
            ]
        }
    ]
}